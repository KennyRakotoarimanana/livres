{% extends 'admin/navigation.html.twig' %}

{% block content %}
    <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Categories de livre</h4>
                  <div class="table-responsive pt-3">
                    <table class="table table-dark">
                      <thead>
                        <tr>
                          <th>
                            #
                          </th>
                          <th>
                            Categorie
                          </th>
                          <th>
                          </th>
                          <th>
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for categorie in categories %}
                            <form action="{{ path('modification_categorie') }}" class="pt-3" method="post">
                            {# <form action="/modification_categorie/{{ categorie.getIdCategorie }}" class="pt-3" method="post"> #}
                                   <input type="hidden" name="idCategorie" value="{{ categorie.getIdCategorie }}" class="form-control form-control-md border-left-0" > 
                                <tr>
                                <td>
                                    {{ categorie.getIdCategorie }}
                                </td>
                                <td>
                                   <input type="text" name="nomCategorie" value="{{ categorie.getNomCategorie }}" class="form-control form-control-md border-left-0" > 
                                </td>
                                <td>
                                <button type="submit" class="btn btn-dark btn-icon-text" name="modifier" value="Modifier">
                                    Modifier
                                    <i class="mdi mdi-file-check btn-icon-append"></i>                          
                                </button>
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-outline-danger btn-icon-text" name="modifier" value="Supprimer">
                                        <i class="mdi mdi-delete btn-icon-append"></i>                                                    
                                        Supprimer
                                    </button>
                                </td>
                                </tr>
                            </form>
                        {% endfor %}
                      </tbody>
                    </table>
                  </div>
                  <p></p>
                    <form action="{{ path('ajout_categorie') }}" class="pt-3" method="post">
                    <div class="row">
                        
                        <input type="text" class="form-control form-control-md border-left-0 col-md-4" name="nouvelleCategorie" placeholder = "Nom de la nouvelle categorie">
                            <button type="submit" class="btn btn-primary btn-icon-text ">
                                <i class="mdi mdi-file-check btn-icon-prepend"></i>
                                Ajouter
                            </button>
                    </form>
                    </div>
                </div>
              </div>
            </div>
            
          </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        <footer class="footer">
          <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright Â© 2018 <a href="https://www.urbanui.com/" target="_blank">Urbanui</a>. All rights reserved.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="mdi mdi-heart text-danger"></i></span>
          </div>
        </footer>
        <!-- partial -->
      </div>
{% endblock %}