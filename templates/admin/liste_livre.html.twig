{% extends 'admin/navigation.html.twig' %}

{% block content %}
    <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Tous les livres</h4>
                  <div class="table-responsive pt-3">
                    <table class="table table-dark">
                      <thead>
                        <tr>
                          <th>
                            #
                          </th>
                          <th>
                            Titre
                          </th>
                          <th>
                            Categorie
                          </th>
                          <th>
                            Auteur
                          </th>
                          <th>
                          </th>
                          <th>
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        {% for livre in livres %}
                            <form action="{{ path('modification_categorie') }}" class="pt-3" method="post">
                            {# <form action="/modification_categorie/{{ categorie.getIdCategorie }}" class="pt-3" method="post"> #}
                                   <input type="hidden" name="idLivre" value="{{ livre.getIdLivre }}" class="form-control form-control-md border-left-0" > 
                                <tr>
                                <td>
                                    {{ livre.getIdLivre }}
                                </td>
                                <td>
                                    {{ livre.getTitre }}
                                </td>
                                <td>
                                   {{ livre.getIdCategorie.getNomCategorie }}
                                </td>
                                <td>
                                   {{ livre.getAuteur}}
                                </td>
                                <td>
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-outline-danger btn-icon-text" name="modifier" value="Supprimer">
                                        <i class="mdi mdi-delete btn-icon-append"></i>                                                    
                                        Supprimer
                                    </button>
                                </td>
                                </tr>
                            </form>
                        {% endfor %}
                      </tbody>
                    </table>
                  </div>
                  <br/>
                    <form action="{{ path('ajout_livre') }}" class="pt-3" method="post">
                      <h4 class="card-title">Ajouter un livre</h4>
                      <div class="row">
                        <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                        <i class="mdi mdi-format-title text-primary"></i>
                                        </span>
                                    </div>
                                    <input placeholder="Titre du livre" type="text" required name="titre" class="form-control form-control-lg border-left-0" id="exampleInputEmail">
                                </div>
                        </div>
                        <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                        <i class="mdi mdi-format-list-bulleted-type  text-primary"></i>
                                        </span>
                                    </div>
                                    <select name="idCategorie" class="form-control form-control-lg">
                                        {% for categorie in categories %}
                                        <option value="{{categorie.getIdCategorie}}">{{categorie.getNomCategorie}}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                        </div>
                        <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                        <i class="mdi mdi-account-star text-primary"></i>
                                        </span>
                                    </div>
                                    <input placeholder="Auteur" type="text" required name="auteur" class="form-control form-control-lg border-left-0" id="exampleInputEmail">
                                </div>
                        </div>
                        <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                        <i class="mdi mdi-information-variant text-primary"></i>
                                        </span>
                                    </div>
                                    <textarea placeholder="Résumé" required name="resume" class="form-control form-control-lg border-left-0" ></textarea>
                                </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                        <i class="mdi mdi-file-image text-primary"></i>
                                        </span>
                                    </div>
                                    <input  type="file"  name="image1" required>
                                </div>
                        </div>
                        <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                        <i class="mdi mdi-file-image text-primary"></i>
                                        </span>
                                    </div>
                                    <input  type="file"  name="image2" required>
                                </div>
                        </div>
                        <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                        <i class="mdi mdi-file-image text-primary"></i>
                                        </span>
                                    </div>
                                    <input  type="file"  name="image3" required>
                                </div>
                        </div>
                          <button type="submit" class="btn btn-primary btn-icon-text ">
                              Ajouter
                          </button>
                      </div>
                          {# <input type="text" class="form-control form-control-md border-left-0 col-md-4" name="titre" placeholder = "Titre du livre"> #}
                      </div>
                    </form>
                </div>
              </div>
            </div>
            
          </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:../../partials/_footer.html -->
        <footer class="footer">
          <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2018 <a href="https://www.urbanui.com/" target="_blank">Urbanui</a>. All rights reserved.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="mdi mdi-heart text-danger"></i></span>
          </div>
        </footer>
        <!-- partial -->
      </div>
{% endblock %}